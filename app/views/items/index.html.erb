<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Type</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.category %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= item.user_id %></td>
        <td><%= link_to 'Show', item %></td>
        <%if user_signed_in? && current_user == item.user%>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Warning! Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    
  </tbody>
</table>

<br>
<%= link_to 'New Item', new_item_path, class: "btn btn-outline-danger" %>

